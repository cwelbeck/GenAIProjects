   "source": [
    "# Healthcare A/B Testing: Appointment Reminder Methods\n",
    "\n",
    "Testing SMS vs email reminders on patient appointment adherence."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import pandas as pd\n",
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "import seaborn as sns\n",
    "from scipy import stats\n",
    "np.random.seed(42)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Simulated A/B test data\n",
    "n = 1000\n",
    "data = pd.DataFrame({\n",
    "    'user_id': np.arange(n),\n",
    "    'group': np.random.choice(['control', 'treatment'], size=n),\n",
    "    'attended': np.random.binomial(1, p=0.2, size=n)\n",
    "})\n",
    "data.loc[data['group'] == 'treatment', 'attended'] = np.random.binomial(1, p=0.85, size=(data['group'] == 'treatment']).sum())\n",
    "data.head()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "summary = data.groupby('group').agg({\n",
    "    'user_id': 'count',\n",
    "    'attended': ['mean', 'sum']\n",
    "})\n",
    "summary.columns = ['users', 'conversion_rate', 'total_conversions']\n",
    "summary"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "control = data[data['group'] == 'control']['attended']\n",
    "treatment = data[data['group'] == 'treatment']['attended']\n",
    "t_stat, p_val = stats.ttest_ind(control, treatment)\n",
    "print(f"T-statistic: {t_stat:.4f}, P-value: {p_val:.4f}")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "sns.barplot(data=data, x='group', y='attended', ci='sd')\n",
    "plt.title('Conversion Rate by Group')\n",
    "plt.ylabel('Mean Conversion Rate')\n",
    "plt.show()"
   ]
  }
